<h1>Eat-da-Burger!</h1>

<div id="burgerlistBox">
  <ol>
    {{#each burger}} {{#unless devoured}}
    <li>
      <div class="burgers">{{burger_name}}
        <button data-id={{id}} class="burgerList">Devour it!</button>
      </div>
    </li>
    {{/unless}} {{/each}}
  </ol>
</div>

<div id="devouringlistBox">
  <ol>
    {{#each burger}} {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}} {{/each}}
  </ol>
</div>



<form class="create-form">

  <div class="form-group">
    <label for="addBurger">Enter your favorite burger:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Add Burger</button>

</form>